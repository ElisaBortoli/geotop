HeaderSpecificStorativity	=	"stor"
HeaderKthSoilSolids	=	"Kth"
HeaderCthSoilSolids	=	"Cth"
HeaderSoilInitPres = "InitPsi"
 SoilLayerNumber = 11
 SoilParFile	=	"input/soil-classes/soil"
 
